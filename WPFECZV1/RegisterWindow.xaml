<Window x:Class="WPFECZV1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:*" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:*" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>

            <TextBlock Text="Подтверждение пароля:*" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:*" Margin="0,0,0,5"/>
            <TextBox x:Name="txtSurname" Margin="0,0,0,10"/>

            <TextBlock Text="Имя:*" Margin="0,0,0,5"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:*" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,20"/>

            <Button Content="Зарегистрироваться" Click="Register_Click" Height="30" Margin="0,0,0,10"/>
            <Button Content="Назад" Click="Back_Click" Height="30"/>

            <TextBlock x:Name="lblMessage" Foreground="Red" Margin="0,20,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>