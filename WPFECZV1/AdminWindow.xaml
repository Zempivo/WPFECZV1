<Window x:Class="WPFECZV1.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Администратор - Управление" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Обновить" Click="Refresh_Click" Margin="0,0,10,0" Width="80"/>
            <Button Content="Выйти" Click="Logout_Click" Width="80"/>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Книги">
                <DataGrid x:Name="booksGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="80"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="100"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding State}" Width="100"/>
                        <DataGridTextColumn Header="Читатель" Binding="{Binding Reader.Name}" Width="120"/>
                        <DataGridTextColumn Header="Дата публикации" Binding="{Binding PublicationDate}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Пользователи">
                <DataGrid x:Name="usersGrid" AutoGenerateColumns="False" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="100"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="100"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="100"/>
                        <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Дата регистрации" Binding="{Binding RegistrationDate}" Width="120"/>
                        <DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>