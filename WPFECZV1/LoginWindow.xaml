<Window x:Class="WPFECZV1.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Авторизация" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

            <Button Content="Войти" Click="Login_Click" Height="30" Margin="0,0,0,10"/>
            <Button Content="Регистрация" Click="Register_Click" Height="30"/>

            <TextBlock x:Name="lblMessage" Foreground="Red" Margin="0,20,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>